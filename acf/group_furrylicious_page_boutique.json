{
    "key": "group_furrylicious_page_boutique",
    "title": "Boutique Page",
    "fields": [
        {
            "key": "field_boutique_hero_tab",
            "label": "Hero Section",
            "type": "tab",
            "placement": "left"
        },
        {
            "key": "field_boutique_hero_label",
            "label": "Section Label",
            "name": "hero_label",
            "type": "text",
            "default_value": "Shop",
            "wrapper": { "width": "50" }
        },
        {
            "key": "field_boutique_hero_title",
            "label": "Hero Title",
            "name": "hero_title",
            "type": "text",
            "required": 1,
            "default_value": "Luxury & Love, Curated for Your Companion"
        },
        {
            "key": "field_boutique_hero_description",
            "label": "Hero Description",
            "name": "hero_description",
            "type": "textarea",
            "rows": 3,
            "default_value": "Discover premium pet products from the brands we trust for our own furry friends. From designer accessories to healthy nutrition, we've curated the best for your best friend."
        },
        {
            "key": "field_boutique_hero_background",
            "label": "Background Image",
            "name": "hero_background",
            "type": "image",
            "return_format": "array",
            "preview_size": "medium"
        },
        {
            "key": "field_boutique_cta_primary_text",
            "label": "Primary CTA Text",
            "name": "hero_cta_primary_text",
            "type": "text",
            "default_value": "Shop Online",
            "wrapper": { "width": "25" }
        },
        {
            "key": "field_boutique_cta_primary_link",
            "label": "Primary CTA Link",
            "name": "hero_cta_primary_link",
            "type": "text",
            "default_value": "/shop/",
            "wrapper": { "width": "25" }
        },
        {
            "key": "field_boutique_cta_secondary_text",
            "label": "Secondary CTA Text",
            "name": "hero_cta_secondary_text",
            "type": "text",
            "default_value": "Visit In-Store",
            "wrapper": { "width": "25" }
        },
        {
            "key": "field_boutique_cta_secondary_link",
            "label": "Secondary CTA Link",
            "name": "hero_cta_secondary_link",
            "type": "text",
            "default_value": "/booking/",
            "wrapper": { "width": "25" }
        },
        {
            "key": "field_boutique_brands_tab",
            "label": "Brands",
            "type": "tab",
            "placement": "left"
        },
        {
            "key": "field_boutique_brands_label",
            "label": "Section Label",
            "name": "brands_label",
            "type": "text",
            "default_value": "Featured Brands",
            "wrapper": { "width": "50" }
        },
        {
            "key": "field_boutique_brands_title",
            "label": "Section Title",
            "name": "brands_title",

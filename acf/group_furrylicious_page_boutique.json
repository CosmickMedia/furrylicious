            "sub_fields": [
                {
                    "key": "field_boutique_brand_logo",
                    "label": "Logo",
                    "name": "logo",
                    "type": "image",
                    "return_format": "array",
                    "preview_size": "thumbnail",
                    "wrapper": { "width": "50" }
                },
                {
                    "key": "field_boutique_brand_name",
                    "label": "Name",
                    "name": "name",
                    "type": "text",
                    "wrapper": { "width": "50" }
                }
            ]
        },
        {
            "key": "field_boutique_services_tab",
            "label": "Services",
            "type": "tab",
            "placement": "left"
        },
        {
            "key": "field_boutique_services_label",
            "label": "Section Label",
            "name": "services_label",
            "type": "text",

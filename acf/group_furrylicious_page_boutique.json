        {
            "key": "field_boutique_giftcards_description",
            "label": "Description",
            "name": "giftcards_description",
            "type": "text",
            "default_value": "Know a pet parent who deserves something special? Our gift cards make the perfect present for birthdays, holidays, or just because."
        },
        {
            "key": "field_boutique_giftcards_cta_text",
            "label": "CTA Text",
            "name": "giftcards_cta_text",
            "type": "text",
            "default_value": "Shop Gift Cards",
            "wrapper": { "width": "50" }
        },
        {
            "key": "field_boutique_giftcards_cta_link",
            "label": "CTA Link",
            "name": "giftcards_cta_link",
            "type": "text",
            "default_value": "/shop/gift-cards/",
            "wrapper": { "width": "50" }
        },
        {
            "key": "field_boutique_giftcards_image",
            "label": "Gift Card Image",
            "name": "giftcards_image",
            "type": "image",
            "return_format": "array",
            "preview_size": "medium"
        }

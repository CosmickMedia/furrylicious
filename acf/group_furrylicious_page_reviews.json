                {
                    "key": "field_reviews_video_caption",
                    "label": "Caption",
                    "name": "caption",
                    "type": "text",
                    "wrapper": { "width": "40" }
                }
            ]
        },
        {
            "key": "field_reviews_leave_tab",
            "label": "Leave Review CTA",
            "type": "tab",
            "placement": "left"
        },
        {
            "key": "field_reviews_leave_title",
            "label": "Section Title",
            "name": "leave_review_title",
            "type": "text",
            "default_value": "Share Your Story"
        },
        {
            "key": "field_reviews_leave_description",
            "label": "Description",
            "name": "leave_review_description",
            "type": "text",
            "default_value": "We'd love to hear about your experience! Leave a review on your favorite platform."
        },
        {
            "key": "field_reviews_leave_platforms",
            "label": "Review Platforms",
            "name": "leave_review_platforms",
            "type": "repeater",
            "layout": "table",
            "button_label": "Add Platform",
            "sub_fields": [
                {
                    "key": "field_reviews_leave_platform_name",
                    "label": "Platform",
                    "name": "name",
                    "type": "select",
                    "choices": {
                        "google": "Google",
                        "yelp": "Yelp",
                        "facebook": "Facebook"
                    },
                    "wrapper": { "width": "30" }
                },
                {
                    "key": "field_reviews_leave_platform_url",
                    "label": "URL",
                    "name": "url",
                    "type": "text",
                    "wrapper": { "width": "70" }
                }
            ]
        }
